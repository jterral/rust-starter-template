# EditorConfig for Rust projects
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.rs]
max_line_length = 100
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4
